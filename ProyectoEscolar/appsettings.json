{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=SQL1002.site4now.net;Database=db_ac24e5_alan;User ID=db_ac24e5_alan_admin;Password=Sql2025$;Trusted_Connection=False;MultipleActiveResultSets=true;Encrypt=False;TrustServerCertificate=true;",
    "LocalConnection": "Server=localhost\\SQLEXPRESS;Database=ProyectoEscolar;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true;",
    "LocalDBConnection": "Server=(LocalDB)\\MSSQLLocalDB;Database=ProyectoEscolar;Trusted_Connection=true;MultipleActiveResultSets=true;"
